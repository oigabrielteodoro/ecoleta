{
  "name": "ecoleta",
  "version": "0.1.0",
  "private": true,
  "repository": "https://github.com/oigabrielteodoro/ecoleta.git",
  "author": "Gabriel Teodoro",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "api:dev": "yarn workspace @ecoleta/api dev",
    "api:typecheck": "yarn workspace @ecoleta/api typecheck",
    "api:lint": "yarn workspace @ecoleta/api lint",
    "api:lint:fix": "yarn workspace @ecoleta/api lint:fix",
    "client:dev": "yarn workspace @ecoleta/client dev",
    "client:test": "yarn workspace @ecoleta/client test",
    "client:typecheck": "yarn workspace @ecoleta/client typecheck",
    "client:lint": "yarn workspace @ecoleta/client lint",
    "client:lint:fix": "yarn workspace @ecoleta/client lint:fix",
    "prepare": "husky install",
    "typecheck": "yarn api:typecheck && yarn client:typecheck",
    "lint": "yarn api:lint && yarn client:lint",
    "lint:fix": "yarn api:lint:fix && yarn client:lint:fix"
  },
  "devDependencies": {
    "@types/node": "16.6.2",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "eslint": "7.31.0",
    "eslint-config-next": "11.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "jest-dom": "4.0.0",
    "prettier": "2.3.2",
    "ts-jest": "27.0.5",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "fp-ts": "2.11.1"
  }
}
